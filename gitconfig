# .gitconfig for regular users

[user]
	name = Beno√Æt Merlet
[color]
	ui = true
[core]
	autocrlf = false
	editor = vim
	excludesfile = ~/.gitglobalignore
[alias]
	log-branch = log --reverse --oneline --decorate=false master..HEAD
	changed-files = "!f() { m=$(git merge-base HEAD master); git diff --name-only HEAD $m; }; f"
	log-branch-with-details = log --reverse --decorate=false master..HEAD
[log]
	decorate = true
[pull]
	rebase = true
[status]
	showUntrackedFiles = all
[git-up "fetch"]
	all = true
[rebase]
	autosquash = true
