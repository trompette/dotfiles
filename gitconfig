# .gitconfig for regular users

[user]
	name = Beno√Æt Merlet
[color]
	ui = true
[core]
	autocrlf = false
	editor = vim
	excludesfile = ~/.gitglobalignore
[alias]
	hist = log --pretty=format:'%C(red)%h%C(reset)%C(yellow)%d%C(reset) %s %C(green)%cr %C(blue)%an <%ae>%Creset' --abbrev-commit
	hist-no-merges = log --pretty=format:'%C(red)%h%C(reset)%C(yellow)%d%C(reset) %s %C(green)%cr %C(blue)%an <%ae>%Creset' --abbrev-commit --no-merges
[log]
	decorate = true
[pull]
	rebase = true
[status]
	showUntrackedFiles = all
